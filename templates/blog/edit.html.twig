{% extends 'baseAdmin.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-container {
            max-width: 800px;
            margin: 40px auto;
            padding: 30px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        
        h1 {
            color: #b5602c;
            text-align: center;
            margin-bottom: 30px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
        }
        
        input, textarea, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        
        textarea {
            min-height: 200px;
            resize: vertical;
        }
        
        .btn {
            background-color: #b5602c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }
        
        .btn-secondary {
            background-color: #6c757d;
        }
        
        .image-preview {
            max-width: 200px;
            max-height: 200px;
            margin-top: 10px;
            display: block;
        }
        
        .form-actions {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="edit-container">
        <h1>Edit Blog Post</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}
                
                {% if blog.image %}
                    <p>Current image:</p>
                    <img src="{{ asset('uploads/' ~ blog.image) }}" alt="Current blog image" class="image-preview">
                {% endif %}
            </div>

            <div class="form-actions">
                <div>
                    <button type="submit" class="btn">Update</button>
                    <a href="{{ path('app_blog_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
                
                {{ include('blog/_delete_form.html.twig') }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}