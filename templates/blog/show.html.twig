{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block stylesheets %}
    <style>
        .container {
            width: 80%;
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #b5602c;
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .blog-image {
            width: 100%;
            max-height: 300px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .blog-details {
            text-align: left;
            font-size: 1.2em;
            line-height: 1.6;
            color: #333;
            padding: 10px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .blog-details strong {
            color: #b5602c;
        }

        .buttons {
            margin-top: 10px;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .btn {
            background-color: #b5602c;
            color: white;
            padding: 8px 20px;
            text-decoration: none;
            border-radius: 20px;
            font-size: 1em;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .btn:hover {
            background-color: #d17942;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ blog.title }}</h1>

        {% if blog.image %}
            <img src="{{ asset('uploads/' ~ blog.image) }}" alt="Blog Image" class="blog-image">
        {% else %}
            <img src="{{ asset('img/default.jpg') }}" alt="Default Image" class="blog-image">
        {% endif %}

        <div class="blog-details">
            <p><strong>Title:</strong> {{ blog.title }}</p>
            <p><strong>Content:</strong> {{ blog.content }}</p>
            <p><strong>Published Date:</strong> {{ blog.publishedDate ? blog.publishedDate|date('Y-m-d') : 'N/A' }}</p>
        </div>

        <div class="buttons">
            <a href="{{ path('app_blog_index') }}" class="btn">Back to List</a>
            <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn">Edit</a>
            {{ include('blog/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
