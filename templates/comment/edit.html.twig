{# templates/comment/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            width: 50%;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #b5602c;
            font-size: 2em;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            width: 100%;
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        textarea, input {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border 0.3s;
        }

        textarea:focus, input:focus {
            border-color: #b5602c;
            outline: none;
        }

        .btn-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn {
            display: inline-block;
            padding: 12px 20px;
            margin: 5px;
            border-radius: 5px;
            font-size: 1em;
            text-decoration: none;
            transition: 0.3s ease;
        }

        .btn-primary {
            background: #b5602c;
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background: #d17942;
        }

        .btn-secondary {
            background: #ddd;
            color: #333;
        }

        .btn-secondary:hover {
            background: #bbb;
        }

        .btn-danger {
            background: #d9534f;
            color: white;
        }

        .btn-danger:hover {
            background: #c9302c;
        }

        @media screen and (max-width: 768px) {
            .container {
                width: 90%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Comment</h1>

        {{ form_start(form, {'method': 'POST'}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
        {{ form_end(form) }}

        <div class="btn-container">
            <a href="{{ path('app_comment_index') }}" class="btn btn-secondary">Back to List</a>
        </div>

        <div class="btn-container">
            {{ include('comment/_delete_form.html.twig', { class: 'btn btn-danger' }) }}
        </div>
    </div>
{% endblock %}
