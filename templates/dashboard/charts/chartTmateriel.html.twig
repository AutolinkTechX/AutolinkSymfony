<div class="col-md-8">
    <div class="card p-3">
        <canvas id="chartTypeMateriel" style="width: 150%; height: 250px;"></canvas>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let labels = {{ countByTypeMateriel|map(row => row.type_materiel)|json_encode|raw }};
        let data = {{ countByTypeMateriel|map(row => row.nombre)|json_encode|raw }};

        let ctx = document.getElementById("chartTypeMateriel").getContext("2d");
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de demandes',
                    data: data,
                    backgroundColor: '#db966b',
                    borderColor: '#b5602c',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Nombre de demandes par type de mat√©riel',
                        font: {
                            size: 16
                        },
                        padding: {
                            bottom: 10
                        }
                    },
                    legend: {
                        display: true,
                        labels: {
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            }
        });
    });
</script>
