{% extends 'baseAdmin.html.twig' %}

{% block title %}List of Recyclable Materials{% endblock %}

{% block page_title %}List of Recyclable Materials{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Recyclable Materials</h6>
                    
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Type of Material</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th>Enterprise</th>
                                    <th>User</th>
                                    <th>Date of Creation</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                {% for materiel in materiels %}
                                    <tr>
                                        <td>{{ materiel.id }}</td>
                                        <td>{{ materiel.name }}</td>
                                        <td>{{ materiel.description }}</td>
                                        <td>{{ materiel.typeMateriel }}</td>
                                        <td>
                                           {% if materiel.image %}
                        {% set imagePath = materiel.image|replace({'\\': '/'}) %}
                        <img src="{{ asset('uploads/' ~ imagePath|split('/')|last) }}" 
                             alt="{{ materiel.name }}" 
                              style="width: 50px; height: 50px; object-fit: cover;">
                    {% else %}
                                                No Image
                                            {% endif %}
                                        </td>
                                        <td>{{ materiel.statut.getName() }}</td>
                                        <td>{{ materiel.entreprise.companyName }}</td>
                                        <td>{{ materiel.user.name }} {{ materiel.user.lastName }}</td>
                                        <td>{{ materiel.datecreation|date('Y-m-d H:i:s') }}</td>
                                        
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
{% endblock %}