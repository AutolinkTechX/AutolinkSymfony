{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center" style="height: 80vh;">
        <div class="card" style="width: 700px;">
            <div class="card-header text-center">Forgot Password</div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_label(form.email, 'Email', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'width: 500px;'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        <a href="{{ path('login') }}" class="btn btn-secondary">Cancel</a>
                    </div>
                {{ form_end(form) }}
                {% for flashMessage in app.flashes('success') %}
                    <div class="alert alert-success mt-2">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}