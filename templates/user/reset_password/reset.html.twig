{% extends 'base.html.twig' %}
{% block body %}
    <div class="container d-flex align-items-center justify-content-center" style="height: 80vh;">
        <div class="card" style="width: 700px;">
            <div class="card-header text-center">Reset Password</div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.password.first, 'New Password', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'style': 'width: 500px;'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.password.second, 'Repeat Password', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'style': 'width: 500px;'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>
                    <div class="form-group">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        <a href="{{ path('login') }}" class="btn btn-secondary">Cancel</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}